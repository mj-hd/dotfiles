{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", "Gopkg.toml", ".git/"],
      "filetypes": ["go"]
    }
  },

  // coc
  "coc.preferences.hoverTarget": "float",

  // eslint
  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // tsserver
  "tsserver.enable": true,
  "typescript.preferences.importModuleSpecifier": "auto",

  // yaml
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "yaml.format.enable": true,

  // json
  "json.schemas": [
    {"schemaURL": "http://json.schemastore.org/package"},
    {"schemaURL": "http://json.schemastore.org/eslintrc"},
    {"schemaURL": "http://json.schemastore.org/circleciconfig"},
    {"schemaURL": "http://json.schemastore.org/prettierrc"}
  ]
}
